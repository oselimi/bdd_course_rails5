<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= flash.each do |msg_type, msg| %>
      <div class="text-center alert alert-<%= msg_type == 'info'? 'success' : 'danger' %>"><%= msg %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
